<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="57dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/IdSuivant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="65dp"
        android:text="suivant"
        app:layout_constraintStart_toEndOf="@+id/IdPrecedent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerQuantite" />

    <Button
        android:id="@+id/IdPrecedent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="65dp"
        android:text="precendent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerQuantite" />

    <Button
        android:id="@+id/IdQuitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="43dp"
        android:text="Quitter"
        app:layout_constraintBottom_toTopOf="@+id/IdLogout"
        app:layout_constraintTop_toBottomOf="@+id/IdPrecedent"
        tools:layout_editor_absoluteX="167dp" />

    <Button
        android:id="@+id/IdLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Logout"
        app:layout_constraintTop_toBottomOf="@+id/IdQuitter"
        tools:layout_editor_absoluteX="172dp" />

    <TextView
        android:id="@+id/IdPrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="313dp"
        tools:layout_editor_absoluteY="96dp" />

    <TextView
        android:id="@+id/IdStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="313dp"
        tools:layout_editor_absoluteY="133dp" />

    <Spinner
        android:id="@+id/spinnerQuantite"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/IdArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="313dp"
        tools:layout_editor_absoluteY="63dp" />

</androidx.constraintlayout.widget.ConstraintLayout>